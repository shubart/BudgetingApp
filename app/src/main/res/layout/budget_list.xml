<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:layout_weight="0.06"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.16">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Name         "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#33CC33"
                android:textSize="12.5dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="Date Created           "
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="Initial Amount        "
                android:layout_marginLeft="10dp"
                android:textColor="#ceba0a"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total Budget          "
                android:id="@+id/textView18"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Difference               "
                android:layout_marginLeft="10dp"
                android:id="@+id/textView19"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Count Items                "
                android:layout_marginLeft="10dp"
                android:id="@+id/notetxt"
                android:textSize="12dp"
                android:textStyle="italic"
                android:paddingTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#33CC33"
                android:textSize="12.5dp" />

            <TextView
                android:id="@+id/buyFrm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="buy from"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/unitPrc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="unit price"
                android:layout_marginLeft="10dp"
                android:textColor="#ceba0a"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="quantity"
                android:id="@+id/quantity"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="total price"
                android:id="@+id/itemTotalP"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="notes"
                android:id="@+id/notesView"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textStyle="italic"
                android:paddingTop="5dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>